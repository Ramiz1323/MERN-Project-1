<% layout("../layouts/boilerplate.ejs") %>
<body>
  <div class="w-[90%] m-auto">
    <h3 class="py-3">Edit your listing</h3>
    <!-- Form -->
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="md:w-[50%] w-[90%]">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          value="<%= listing.title %>"
          placeholder="Add a title"
          class="form-control"
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Enter description"
          class="form-control"
        ><%= listing.description %></textarea>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input
          type="text"
          placeholder="Enter Image URL"
          name="listing[image]"
          value="<%= listing.image %>"
          class="form-control"
        />
      </div>

      <div class="flex flex-col md:flex-row md:gap-4">
        <div class="mb-3 md:!w-[40%]">
          <label for="price" class="form-label">Price</label>
          <input
            type="Number"
            name="listing[price]"
            value="<%= listing.price %>"
            class="form-control"
          />
        </div>

        <div class="mb-3 md:!w-full">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            value="<%= listing.country %>"
            class="form-control"
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          value="<%= listing.location %>"
          class="form-control"
        />
      </div>

      <button class="btn btn-dark mb-3">Update Listing</button>
    </form>
  </div>
</body>